<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="DTextStyle" parent="@android:style/TextAppearance">
        <item name="android:color">@color/colorBlack</item>
    </style>

    <style name="DTextStyle.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="DTextStyle.Body">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>



</resources>
